# Zeus Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Required
# =============================================================================

# OpenRouter API key (required)
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here

# =============================================================================
# Optional - LLM Settings
# =============================================================================

# Model to use (default: anthropic/claude-sonnet-4)
# ZEUS_MODEL=anthropic/claude-sonnet-4

# =============================================================================
# Optional - Budget Limits
# =============================================================================

# Maximum LLM calls per run (default: 6)
# Full pipeline: normalize(1) + plan(2) + generate(3) + critique(4) + revise(5) + critique(6)
# ZEUS_MAX_LLM_CALLS=6

# Soft target for LLM calls (default: 4)
# ZEUS_TARGET_LLM_CALLS=4

# Maximum revision loops (default: 1)
# ZEUS_MAX_REVISIONS=1

# =============================================================================
# Optional - Timeout Settings
# =============================================================================

# Timeout per LLM call in seconds (default: 60)
# ZEUS_PER_CALL_TIMEOUT=60

# Total run timeout in seconds (default: 300 = 5 minutes)
# ZEUS_TOTAL_RUN_TIMEOUT=300

# =============================================================================
# Optional - Output Settings
# =============================================================================

# Directory for run records (default: ./run_records)
# ZEUS_RUN_RECORDS_DIR=./run_records
